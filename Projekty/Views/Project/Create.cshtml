@model Projekty.Models.Project

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="mt-5">Dodaj nowy projekt</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nazwa projektu</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Opis</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Person" class="control-label">Osoba odpowiedzialna</label>
                    <input asp-for="Person" class="form-control" />
                    <span asp-validation-for="Person" class="text-danger"></span>
                </div>

                <div class="row mt-4">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Dodaj projekt</button>
                        <a asp-action="Index" class="btn btn-secondary">Powrót do listy projektów</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
